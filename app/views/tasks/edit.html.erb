<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Update the task</h1>
    </div>
  </div>

  <%= simple_form_for(@task) do |f| %>
    <%= f.input :name %>
    <%= f.input :details %>
    <%= f.input :completed %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
